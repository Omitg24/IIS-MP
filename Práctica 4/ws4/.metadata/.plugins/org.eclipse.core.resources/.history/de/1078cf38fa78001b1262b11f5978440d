package uo.mp.s4;

import java.util.List;

import uo.mp.util.checks.ArgumentsCheck;

public class Algorithms {
	
	/**
	 * Dada una lista  objetos, busca un objeto también recibido
	 * 
	 * @param objects, lista de objetos a buscar
	 * @param obj, objeto a buscar
	 * 
	 * @return pos, posición que ocupa en la lista
	 */
	public static int search(List<Object> objects, Object obj) {
		ArgumentsCheck.isTrue(objects!=null && obj!=null, "Los parámetros no pueden ser null");
		int pos = 0;
		for(Object o: objects) {
			if ( o.equals( obj )) {
				return pos;
			}
			pos++;
		}
		return -1;	
	}
}
