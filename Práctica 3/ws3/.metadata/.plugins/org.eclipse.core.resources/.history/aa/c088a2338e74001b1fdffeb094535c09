package uo.mp.s3.post.model;

import java.io.PrintStream;
import java.util.ArrayList;

/**
 * @author Omitg
 *
 */
public class Photo {
	/**
	 * Atributo usuario
	 */
	private String user;
	
	/**
	 * Atributo mensaje
	 */
	private String file;
	
	/**
	 * Atributo likes
	 */
	private int likes;
	
	/**
	 * Atributo comments, lista de comentarios
	 */
	private ArrayList<String> comments = new ArrayList<String>();
	
	/**
	 * Constructor con parámetros de la clase Message
	 * 
	 * @param user, usuario, de tipo String
	 * @param msg, mensaje, de tipo String
	 */
	public Photo(String user, String msg, int likes, ArrayList<String> comments) {
		setUser(user);
		setFile(msg);
		setLikes(likes);
		setComments(comments);
	}
	
	/**
	 * Método que devuelve el valor del atributo user
	 * 
	 * @return user, usuario que publicó la foto
	 */
	public String getUser() {
		return user;
	}

	/**
	 * Método que modifica el valor del atributo user
	 * 
	 * @param user, usuario que publicó la foto, de tipo String
	 */
	public void setUser(String user) {
		this.user = user;
	}

	/**
	 * Método que devuelve el valor del atributo file
	 * 
	 * @return file, archivo donde se almacena la foto, de tipo String
	 */
	public String getFile() {
		return file;
	}
	
	/**
	 * Método que modifica el valor del atributo file
	 * 
	 * @param file, archivo donde se almacena la foto, de tipo String
	 */
	public void setFile(String file) {
		this.file = file;
	}
	
	/**
	 * Método que devuelve el valor del atributo likes
	 * 
	 * @return likes, likes de la foto
	 */
	public int getLikes() {
		return likes;
	}

	/**
	 * Método que modifica el valor del atributo likes
	 * 
	 * @param likes, likes de la foto, de tipo int
	 */
	public void setLikes(int likes) {
		this.likes = likes;
	}

	/**
	 * Método que devuelve una lista con los comentarios
	 * 
	 * @return comments, lista de comentarios
	 */
	public ArrayList<String> getComments() {
		return comments;
	}

	/**
	 * Método que modifica el valor del atributo comments
	 * 
	 * @param comments, lista de los comentarios de la foto, de tipo ArrayList<String>
	 */
	public void setComments(ArrayList<String> comments) {
		this.comments = comments;
	}
	
	/**
	 * Método que imprime los datos del mensaje, por ejemplo: User, File, Likes, Comentarios.
	 * 
	 * @param out, lugar donde imprimir los datos, de tipo PrintStream
	 */
	public void print(PrintStream out) {
		out.println("Photo--> User: " + getUser() + " --- File: " + getFile() 
		+ " --- Likes: " + getLikes() + " --- Comments: " + getComments() + "\n");
	}
}
