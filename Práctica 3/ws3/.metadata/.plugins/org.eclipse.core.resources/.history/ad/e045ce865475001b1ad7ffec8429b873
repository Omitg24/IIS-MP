package uo.mp.s3.post.model.message;

import static org.junit.Assert.assertEquals;

import org.junit.Before;
import org.junit.Test;

import uo.mp.s3.post.model.Message;

/**
 * Titulo: Clase ToStringTest
 * 
 * @author Omitg
 * @version 20-02-2021
 */
public class ToStringTest {
	private String user1;
	private String user2;
	
	private String message1;
	private String message2;
	
	@Before
	public void setUp() {
		user1 = "Omitg";
		message1 = "Bienvenido";
		user2="DaneonX";
		message2 = "Buenas tardes";		
	}
	
	/**
	 * Pruebas del método toString de la clase Message:
	 * 1- Recibe un usuario 1
	 * 2- Recibe un usuario 2
	 */
	
	/**
	 * 1- Recibe un usuario 1
	 * GIVEN Se crea un usuario dado como parametros dos atributos
	 * WHEN Se llama al método toString
	 * THEN Se comprueba que el método toString coincide con lo esperado;
	 */
	@Test
	public void testToStringUser1() {
		Message msg1 = new Message(user1, message1);
		String expected = "Message --> User: " + msg1.getUser() + " | msg: " + msg1.getMessage() + 
				"\n\t | Likes: " + msg1.getLikes() + " | Comments: " + msg1.getComments(); 
		assertEquals(expected, msg1.toString());
	}
	
	/**
	 * 2- Recibe un usuario 2
	 * GIVEN Se crea un usuario dado como parametros dos atributos
	 * WHEN Se llama al método toString
	 * THEN Se comprueba que el método toString coincide con lo esperado;
	 */
	@Test
	public void testToStringUser2() {
		Message msg2 = new Message(user2, message2);
		String expected = "Message --> User: " + msg2.getUser() + " | msg: " + msg2.getMessage() + 
				"\n\t | Likes: " + msg2.getLikes() + " | Comments: " + msg2.getComments();
		assertEquals(expected, msg2.toString());
	}
}
