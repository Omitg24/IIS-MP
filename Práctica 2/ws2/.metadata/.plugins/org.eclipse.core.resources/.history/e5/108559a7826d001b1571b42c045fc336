package uo.mp.s2.game.model.game2048;

import static org.junit.Assert.assertArrayEquals;
import static org.junit.Assert.assertEquals;

import org.junit.Test;

import uo.mp.s2.game.model.Game2048;

/**
 * <p>
 * Título: Clase testRotateMatrix 
 * <p>
 *  
 * @author Omar Teixeira González
 * @version 11/02/2021
 */

public class RotateMatrixTest {
	
	/**
	 * Pruebas del método rotateMatrix de la clase Game2048:
	 * 1- Primera ejecución de rotateMatrix
	 * 2- Segunda ejecución de rotateMatrix
	 * 3- Tercera ejecución de rotateMatrix
	 * 4- Cuarta ejecución de rotateMatrix
	 */
	
	/**
	 * 1- Primera ejecución de rotateMatrix
	 */
	@Test
	public void testRotateBoardFirst() {
		Game2048 game = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});
		int i=0;
		Game2048 expected = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});		
		while (i<1) {
			game.rotateBoard();
			expected.rotateBoard();
		}
		assertArrayEquals (expected.getBoard(), game.getBoard());
	}
	
	/**
	 * 2- Segunda ejecución de rotateMatrix
	 */
	@Test
	public void testRotateBoardSecond() {
		Game2048 game = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});
		int i=0;
		Game2048 expected = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});		
		while (i<2) {
			game.rotateBoard();
			expected.rotateBoard();
		}
		assertArrayEquals (expected.getBoard(), game.getBoard());
	}
	
	/**
	 * 3- Tercera ejecución de rotateMatrix
	 */
	@Test
	public void testRotateBoardThird() {
		Game2048 game = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});
		int i=0;
		Game2048 expected = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});		
		while (i<3) {
			game.rotateBoard();
			expected.rotateBoard();
		}
		assertArrayEquals (expected.getBoard(), game.getBoard());
	}
	/**
	 * 4- Cuarta ejecución de rotateMatrix
	 */
	@Test
	public void testRotateBoardFourth() {
		Game2048 game = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});
		int i=0;
		Game2048 expected = new Game2048 (new int[][] {{1,2,3},{4,5,6},{7,8,9}});		
		while (i<4) {
			game.rotateBoard();
			expected.rotateBoard();
		}
		assertArrayEquals (expected.getBoard(), game.getBoard());
	}
}
