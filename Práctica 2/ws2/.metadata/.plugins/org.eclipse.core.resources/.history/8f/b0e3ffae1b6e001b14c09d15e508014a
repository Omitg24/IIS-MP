package uo.mp.s2.game.model.game2048;

import static org.junit.Assert.assertEquals;

import org.junit.Test;

import uo.mp.s2.game.model.Game2048;

/**
 * <p>
 * Título: Clase NextTest
 * <p>
 *  
 * @author Omar Teixeira González
 * @version 11/02/2021
 */

public class NextTest {
	
	/**
	 * Pruebas del método next de la clase Game2048:
	 * 1- Primera ejecución de next
	 * 2- Segunda ejecución de next
	 * 3- Tercera ejecución de next
	 * 4- Cuarta ejecución de next
	 * 5- Quinta ejecución de next
	 * 6- Sexta ejecución de next
	 * 7- Séptima ejecución de next
	 * 8- Octava ejecución de next
	 * 9- Novena ejecución de next
	 */
	
	/**
	 * 1- Primera ejecución de next
	 */
	@Test
	public void testNextFirst() {
		Game2048 game = new Game2048();
		int i=0;
		while (i<1) {
			game.next();
			i+=1;			
		}		
		assertEquals(2,CodeForTest.getSum(game.getBoard()));		
	}

	/**
	 * 2- Segunda ejecución de next
	 */
	@Test
	public void testNextSecond() {
		Game2048 game = new Game2048();
		int i=0;
		while (i<2) {
			game.next();
			i+=1;			
		}		
		assertEquals(4,CodeForTest.getSum(game.getBoard()));
	}
	
