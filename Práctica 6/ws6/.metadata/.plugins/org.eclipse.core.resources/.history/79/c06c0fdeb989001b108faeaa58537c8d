package uo.mp.s6.greenhouse.humidity;

import java.util.Random;

import uo.mp.s6.greenhouse.scanner.Checkable;

public class IrrigationSystem implements Checkable{
	
	public enum Levels{OFF, LOW, MEDIUM, HIGH};
	
	private int id;
	
	public IrrigationSystem(int id) {
		this.id=id;
	}
	
	public String toString() {
		return "IrrigationSystem [id="+id+"]";
	}

	@Override
	public boolean check() {
		int probability = new Random().nextInt(100);
		if (probability<=5) {
			return false;
		} else {
			return true;
		}
	}
}
