package uo.mp.s6.greenhouse.temperature;

/**
 * <p>Title: Door</p>
 * <p>Description: Clase que simula una puerta.</p>
 * <p>Copyright: Copyright (c) 2020</p>
 * <p>Escuela de Ingeniería Informática</p>
 * <p>Metodología de la Programación</p>
 * 
 * @author Omitg
 * @version 18-03-2021
 */
public class ManualDoor implements Doorable{
	/**
	 * Atributo abierta
	 */
	private boolean opened = false;
	/**
	 * Atributo id de la puerta
	 */
	private int id;
	
	/**
	 * Constructor que crea la puerta con su id
	 * 
	 * @param id, id de la puerta
	 */
	public ManualDoor(int id) {
		this.id = id;
	}

	/**
	 * Método que devuelve si una puerta está abierta
	 */
	public boolean isOpened() {
		return this.opened;
	}
	
	/**
	 * Método que abre puertas
	 */
	public void open(){
		if ( ! opened) {
			showOpeningMessage();
			opened = true;
		}
	}

	/**
	 * Método que cierra puertas
	 */
	public void close(){
		if ( opened) {
			showClosingMessage();
			opened = false;
		}
	}

	/**
	 * Método que lanza un mensaje de entrada
	 */
	protected void showOpeningMessage() {
		System.out.println ("  Please, open the door " + id);
	}
	
	/**
	 * Método que lanza un mensaje de salida
	 */
	protected void showClosingMessage() {
		System.out.println ("  Please, close the door " + id);
	}

	
}
