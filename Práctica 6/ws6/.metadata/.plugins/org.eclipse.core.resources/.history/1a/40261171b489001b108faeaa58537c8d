package uo.mp.s6.greenhouse.humidity;

import java.util.Random;

import uo.mp.s6.greenhouse.scanner.Checkable;

public class IrrigationSystem implements Checkable{
	
	public static final int OFF=1, LOW=2, MEDIUM=3, HIGH=4;
	
	private int state;
	
	private int id;
	
	public IrrigationSystem(int id) {
		this.id=id;
	}
	
	private void setState(int state) {
		if (state==OFF || state==LOW || state==MEDIUM || state == HIGH) {
			this.state=state;
		}
	}
	
	public int getState() {
		return state;
	}
	
	public String toString() {
		return "IrrigationSystem [id="+id+"]";
	}

	@Override
	public boolean check() {
		int probability = new Random().nextInt(100);
		if (probability<=5) {
			return false;
		} else {
			return true;
		}
	}
}
